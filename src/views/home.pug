doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='')
    meta(name='author', content='')
    title Complaint Management System
    link(href='css/bootstrap.min.css', rel='stylesheet')
    link(href='css/half-slider.css', rel='stylesheet')

  body
    // Navigation
    nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .container
        // Brand and toggle get grouped for better mobile display
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') COMPLAINT MANAGEMENT

        // Collect the nav links, forms, and other content for toggling
        .collapse.navbar-collapse#bs-example-navbar-collapse-1
          ul.nav.navbar-nav
            li
              a(href='/login') User Login
            li
              a(href='/signup') User Registration
            li
              a(href='/admin-login') admin

    // Half Page Image Background Carousel Header
    header#myCarousel.carousel.slide
      // Indicators
      ol.carousel-indicators
        li(data-target='#myCarousel', data-slide-to='0', class='active')
        li(data-target='#myCarousel', data-slide-to='1')
        li(data-target='#myCarousel', data-slide-to='2')

      // Wrapper for Slides
      div.carousel-inner
        div.item.active
          // Set the second background image using inline CSS below.
          div.fill(style="background-image:url('img/c2.jpg')")
          div.carousel-caption

        div.item
          // Set the third background image using inline CSS below.
          div.fill(style="background-image:url('img/c10.jpg')")
          div.carousel-caption

      // Controls
      a.left.carousel-control(href='#myCarousel', data-slide='prev')
        span.icon-prev

      a.right.carousel-control(href='#myCarousel', data-slide='next')
        span.icon-next

    // Page Content
    .container
      .row
        .col-lg-12
          .com
            h1
              b WELCOME TO COMPLAINT MANAGEMENT SYSTEM
            p
              h2 The Easiest Way To Complain Online
              br
              b
                i Tired off getting ripped off? Fight back and file a customer complaint now.
                |  Sign Up Today And You Can Leave Complaints on various topics/company.

      hr

      // Footer
      footer
        .row
          .col-lg-12
            p Copyright &copy; 2020 CMS

    // jQuery
    script(src='js/jquery.js')

    // Bootstrap Core JavaScript
    script(src='js/bootstrap.min.js')

    // Script to Activate the Carousel
    script.
      $('.carousel').carousel({
          interval: 5000 //changes the speed
      })
