doctype html
html(lang="en")
  head
    meta(http-equiv="Content-Type" content="text/html; charset=utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title CMS | Admin login
    link(type="text/css" href="bootstrap/css/bootstrap.min.css" rel="stylesheet")
    link(type="text/css" href="bootstrap/css/bootstrap-responsive.min.css" rel="stylesheet")
    link(type="text/css" href="css/theme.css" rel="stylesheet")
    link(type="text/css" href="img/icons/css/font-awesome.css" rel="stylesheet")
    link(type='text/css' href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,600italic,400,600' rel='stylesheet')
  body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          a.btn.btn-navbar(data-toggle="collapse" data-target=".navbar-inverse-collapse")
            i.icon-reorder.shaded
          a.brand(href="/") CMS | Admin
          .nav-collapse.collapse.navbar-inverse-collapse
            ul.nav.pull-right
              li
                a(href="/") Home
    .wrapper
      .container
        .row
          .module.module-login.span4.offset4
            form.form-vertical(method="post")
              .module-head
                h3 Sign In
              span(style="color:red;")
              .module-body
                .control-group
                  .controls.row-fluid
                    input.span12(type="text" id="inputEmail" name="username" placeholder="Email")
                .control-group
                  .controls.row-fluid
                    input.span12(type="password" id="inputPassword" name="password" placeholder="Password")
              .module-foot
                .control-group
                  .controls.clearfix
                    button.btn.btn-primary.pull-right(type="submit" name="submit") Login
    .footer
      .container
        b.copyright Â© 2020 CMS All rights reserved.
  script(src="scripts/jquery-1.9.1.min.js" type="text/javascript")
  script(src="scripts/jquery-ui-1.10.1.custom.min.js" type="text/javascript")
  script(src="bootstrap/js/bootstrap.min.js" type="text/javascript")
