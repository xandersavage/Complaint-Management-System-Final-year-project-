html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="description", content="")
    meta(name="author", content="Dashboard")
    meta(name="keyword", content="Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina")
    title CMS | User Registration
    link(href="/assets/css/bootstrap.css", rel="stylesheet")
    link(href="/assets/font-awesome/css/font-awesome.css", rel="stylesheet")
    link(href="/assets/css/style.css", rel="stylesheet")
    link(href="/assets/css/style-responsive.css", rel="stylesheet")
    link(href="/css/alerts.css", rel="stylesheet")
    script.
      function userAvailability() {
        $("#loaderIcon").show();
        jQuery.ajax({
          url: "check_availability.php",
          data:'email='+$("#email").val(),
          type: "POST",
          success:function(data){
            $("#user-availability-status1").html(data);
            $("#loaderIcon").hide();
          },
          error:function (){}
        });
      }

  body
    #login-page
      .container
        form#signupForm.form-login(method="post")
          h2.form-login-heading User Registration
          p(style="padding-left: 1%; color: green")
            if msg
              | #{msg}

          .login-wrap
            input#userName(type="text", class="form-control", placeholder="Full Name", name="fullname", required="required", autofocus)
            br
            input#userEmail(type="email", class="form-control", placeholder="Email", onBlur="userAvailability()", name="email", required="required")
            span#user-availability-status1(style="font-size:12px;")
            br
            input#userAge(type="number", class="form-control", placeholder="Age", required="required", name="age")
            br
            input#userPassword(type="password", class="form-control", placeholder="Password", required="required", name="password")
            br
            select#userCollege.form-control(name="college", required="required")
              option(value="science") Science
              option(value="technology") Technology
            br
            select#userDepartment.form-control(name="department", required="required")
              option(value="computer science") Computer Science
              option(value="geophysics") Geophysics
              option(value="geology") Geology
              option(value="mathematics") Mathematics
              option(value="emt") EMT
              option(value="physics") Physics
              option(value="chemistry") Chemistry
              option(value="mechanical") Mechanical Engineering
              option(value="civil") Civil Engineering
              option(value="petroleum") Petroleum Engineering
              option(value="chemical") Chemical Engineering
            br

            button.btn.btn-theme.btn-block(type="submit", name="submit", id="submit")
              i.fa.fa-user Register
            hr

            .registration
              | Already Registered
              br
              a(href="/login")
                | Sign in

      script(src="/js/bundle.js")